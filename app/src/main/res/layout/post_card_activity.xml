<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPost"
    android:layout_width="match_parent"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    app:cardMaxElevation="12dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/border_corners">

        <TextView
            android:id="@+id/tvPostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/scrolll_border"
            android:fontFamily="sans-serif-light"
            android:padding="9dp"
            android:text="Post Title"
            android:textColor="@color/primaryColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPostTitle"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            >

            <TextView
                android:id="@+id/tvComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:textAlignment="center"
                android:drawablePadding="2dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="0 Comments" />

            <TextView
                android:id="@+id/tvLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:textAlignment="center"
                android:drawablePadding="2dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="0 Likes"
                android:layout_marginBottom="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutsignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.478">

            <TextView
                android:id="@+id/tvOpenThread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llStats"
                android:layout_marginTop="80dp"
                android:drawablePadding="5dp"
                android:drawableEnd="@drawable/ic_baseline_east_24"
                android:fontFamily="@font/cardo_italic"
                android:padding="2dp"
                android:text="View Post"
                android:textColor="@color/white"
                android:textAlignment="textEnd"
                android:textSize="20sp"
                android:textStyle="italic" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>